<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
      package="com.nathaniel.amendroid7z"
      android:versionCode="1"
      android:versionName="1.0">
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"></uses-permission>
    <application android:icon="@drawable/icon" android:label="@string/app_name">
        <activity android:name="com.nathaniel.amendroid7z.Main"
                  android:label="@string/app_name"
                  android:configChanges="orientation|keyboardHidden">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
     
      <activity android:name="com.nathaniel.amendroid7z.DirectoryInfo" android:enabled="true"
	    		  android:label="@string/dir_info">
	    		  
	  
	    	<intent-filter>
	    		<action android:name="android.intent.action.VIEW" />
	    		<data android:mimeType="application/manager" />
	    		<category android:name="android.intent.category.DEFAULT" />
	    	</intent-filter>
	   </activity>
	   
	    <activity android:name="com.nathaniel.amendroid7z.Settings" 
	    		  android:label="@string/set_name" />

    </application>
    <uses-sdk android:minSdkVersion="7" />

</manifest> 